import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
		//creating an object for Scanner class
		Scanner sc = new Scanner(System.in);
		
		//initializing the variables and user input
		int a = sc.nextInt();
		int b = sc.nextInt();
		int c = sc.nextInt();
		int totdat = c*a;
		int st = totdat/b;
		int bal = totdat%b;
		
		
		if (a-b != 1 && a-b != 8){
		    int ans = st-1;
		    System.out.println(ans);
		}
		else if(a-b == 8){
		    System.out.println("7");
		}
		else{
		    System.out.println("1");
		}
	}
}
