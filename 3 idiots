import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        
        //initializing the points of the coordinates
        int x1,y1,x2,y2;
        double x3,y3;
        
        //creating an object for the scanner function
        Scanner sc = new Scanner(System.in);
        
        // getting the user input for the coordinates
        x1 = sc.nextInt();
        y1 = sc.nextInt();
        x2 = sc.nextInt();
        y2 = sc.nextInt();
        
        // calculating the midpoint of the 2 points
        x3 = (x1+x2)/2.0;
        y3 = (y1+y2)/2.0;
        
        System.out.print("Binoy's house is located at ("+x3+","+y3+")");
    }
}
