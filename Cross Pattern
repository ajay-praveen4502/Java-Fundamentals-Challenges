import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
		//creating of objext for Scanner class
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();       //4
		
		for (int i = 0;i < n;i++){  //0 1 2 3
		    for (int j = 0; j < n; j++){    //0 1 2 3
		        if (i + j == n-1 || i == j){
		        System.out.print("*");
		        }
		        else {
		            System.out.print(" ");
		        }
		    }
		    System.out.println();
		}
	}
}
