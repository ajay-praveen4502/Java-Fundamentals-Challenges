import java.util.Scanner;
public class Main
{
    public static void main(String[] args)
    {
        //Creating  a variable to get user input of the person's name and favorite game
        String name,game;
        
        //creating a new object for the Scanner function
        Scanner sc = new Scanner(System.in);
        
        //get user input for the name
        System.out.println("Name:");
        name = sc.nextLine();
        
        //get user inout for the game
        System.out.println("Game:");
        game = sc.nextLine();
        
        System.out.println("My name is "+name+" and I love to play "+game);
    }
}
